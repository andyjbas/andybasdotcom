doctype html
html.no-js(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Andy Bas
		link(rel='stylesheet', href='css/app.css')
	body
		.off-canvas-wrap
			.inner-wrap
				nav.tab-bar(style='background: white;')
					section.left-small(style='background: #333333; margin: 20px 0 0 20px;')
						a.left-off-canvas-toggle.menu-icon
							span
				aside#menu.left-off-canvas-menu
					include templates/_menu.static.jade
				section.main-section
					#home(style='display: none;')
						include templates/_home.static.jade
					#about(style='display: none;')
						include templates/_about.static.jade
					#work(style='display: none;')
						include templates/_work.static.jade
					#contact(style='display: none;')
						include templates/_contact.static.jade
				a.exit-off-canvas
		script(src='js/vendor.js')
		script(src='js/app.js')
		script.
			require('initialize');
